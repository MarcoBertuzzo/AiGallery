@inject NavigationManager NavigationManager
@inject LanguageService languageService

<header class="mb-3">

    <a class="header-brand" href="\">
        <img src="logo.png" alt="Logo Ai Gallery">
        <div class="logo-text">AI Gallery</div>
    </a>

    <nav class="navbar navbar-expand-sm">

            <ul class="navbar-nav text-right">
                <li class="nav-item active mx-5">
                    <NavLink class="nav-link" @onclick='(() => NavigationManager.NavigateTo("contact", true))'>
                        <!--trick to manage a second click towards the current page -->
                        @(languageService.Translate("Contacts"))
                    </NavLink>
                </li>
            <li class="nav-item active mx-5">
                    <NavLink class="nav-link" @onclick='(() => NavigationManager.NavigateTo("load-images", true))'>
                        <!--trick to manage a second click towards the current page -->
                        @(languageService.Translate("LoadYourImages"))
                    </NavLink>
                </li>
            </ul>
    </nav>

</header>
